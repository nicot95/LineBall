<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/about_us_relative">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Designed &amp; Programmed by:"
                android:id="@+id/textView"
                android:layout_marginTop="36dp"
                android:textIsSelectable="true"
                android:textSize="27dp"
                android:nestedScrollingEnabled="false"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daniel Hernandez"
                android:id="@+id/textView2"
                android:layout_marginTop="28dp"
                android:textSize="25dp"
                android:textColor="#ff00fff9"
                android:textStyle="bold"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="&amp;"
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nicolas Trama"
                android:id="@+id/textView5"
                android:textSize="25dp"
                android:textColor="#ff14ff00"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"

                android:src="@drawable/greenroundbutton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/danicirclepic"
                android:layout_below="@+id/textView3"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/danicirclepic"
                android:layout_below="@+id/textView3"
                android:layout_toLeftOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="danielhp95@gmail.com"
                android:id="@+id/textView4"
                android:layout_marginTop="42dp"
                android:textColor="#ff00fdff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="nicotrama22@gmail.com"
                android:id="@+id/textView6"
                android:textColor="#ff0cff00"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>
    </FrameLayout>
</LinearLayout>